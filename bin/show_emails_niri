#!/usr/bin/env bash

# Get window ID that matches "Proton Mail"
window_id=$(niri msg --json windows | jq -r '.[] | select(.title | contains("Proton Mail")) | .id' | head -1)

if [ -n "$window_id" ]; then
    # Window found, focus it
    niri msg action focus-window --id "$window_id"
else
    # Window not found, open Proton Mail
    xdg-open https://mail.proton.me
fi
