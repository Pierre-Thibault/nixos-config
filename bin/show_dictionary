#!/usr/bin/env bash

busctl --user call \
    org.gnome.Shell \
    /de/lucaswerkmeister/ActivateWindowByTitle \
    de.lucaswerkmeister.ActivateWindowByTitle \
    setCurrentDesktopFirst \
    b 1

for title in Larousse "Le Robert" Éditeur
do
    if busctl --user call \
        org.gnome.Shell \
        /de/lucaswerkmeister/ActivateWindowByTitle \
        de.lucaswerkmeister.ActivateWindowByTitle \
        activateBySubstring \
        s "$title — Waterfox" | grep true; then
        exit 0
        fi
done
busctl --user call \
    org.gnome.Shell \
    /de/lucaswerkmeister/ActivateWindowByTitle \
    de.lucaswerkmeister.ActivateWindowByTitle \
    activateBySubstring \
    s "Reverso"
