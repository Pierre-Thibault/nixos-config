#!/usr/bin/env bash

busctl --user call \
    org.gnome.Shell \
    /de/lucaswerkmeister/ActivateWindowByTitle \
    de.lucaswerkmeister.ActivateWindowByTitle \
    setCurrentDesktopFirst \
    b 1

for title in Reverso Larousse "Le Robert" LanguageTool
do
    if busctl --user call \
        org.gnome.Shell \
        /de/lucaswerkmeister/ActivateWindowByTitle \
        de.lucaswerkmeister.ActivateWindowByTitle \
        activateBySubstring \
        s "$title" | grep true; then
        exit 0
        fi
done
