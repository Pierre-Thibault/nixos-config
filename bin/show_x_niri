#!/usr/bin/env bash

# Get window ID that matches "X — Profil"
window_id=$(niri msg --json windows | jq -r '.[] | select(.title | contains("X — Profil")) | .id' | head -1)

if [ -n "$window_id" ]; then
    # Window found, focus it
    niri msg action focus-window --id "$window_id"
else
    # Window not found, open X
    xdg-open https://x.com
fi
