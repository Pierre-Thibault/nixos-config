    org.gnome.Shell \
    /de/lucaswerkmeister/ActivateWindowByTitle \
    de.lucaswerkmeister.ActivateWindowByTitle \
    activateBySubstring \
    s "X â€” Profil" | grep true; then
    exit 0
fi
xdg-open https://x.com

