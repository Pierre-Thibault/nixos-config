#!/usr/bin/env bash

busctl --user call \
    org.gnome.Shell \
    /de/lucaswerkmeister/ActivateWindowByTitle \
    de.lucaswerkmeister.ActivateWindowByTitle \
    setCurrentDesktopFirst \
    b 1

for title in "Accueil / X" "Home / X"
do
    if busctl --user call \
        org.gnome.Shell \
        /de/lucaswerkmeister/ActivateWindowByTitle \
        de.lucaswerkmeister.ActivateWindowByTitle \
        activateByTitle \
        s "$title â€” Waterfox" | grep true; then
        exit 0
        fi
done
xdg-open https://x.com

