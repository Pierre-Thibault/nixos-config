#!/usr/bin/env bash

ln -sf /home/pierre/.themes/Graphite-blue-Light-nord/gtk-4.0/assets /home/pierre/.config/gtk-4.0/assets
ln -sf /home/pierre/.themes/Graphite-blue-Light-nord/gtk-4.0/gtk.css /home/pierre/.config/gtk-4.0/gtk.css
ln -sf /home/pierre/.themes/Graphite-blue-Light-nord/gtk-4.0/gtk-dark.css /home/pierre/.config/gtk-4.0/gtk-dark.css
ln -sf config-light.toml /home/pierre/.config/helix/config.toml
ln -sf config-light /home/pierre/.config/bat/config
ln -sf wezterm-light.lua /home/pierre/.config/wezterm/wezterm.lua

gsettings set org.gnome.desktop.interface gtk-theme "Graphite-blue-Light-nord";  # Legacy app
gsettings set org.gnome.shell.extensions.user-theme name "Adwaita"
gsettings set org.gnome.settings-daemon.plugins.color night-light-enabled false;
sleep 1
gsettings set org.gnome.desktop.interface accent-color "slate"
guake --change-palette="Ocean Light"

flatpak --user=pierre override --env=GTK_THEME=Graphite-blue-Light-nord
